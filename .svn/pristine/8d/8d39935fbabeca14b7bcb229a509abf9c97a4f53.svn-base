footer * {
  box-sizing: content-box !important;
  color: #fff !important;
}
footer .footerNav {
  width: 100%;
  background-color: #333436;
  border-bottom: 1px solid #6e6f70;
  color: #fff;
  padding-top: 30px;
  padding-bottom: 30px;
}



footer .footerNav .inner{
  display: flex;
  color: #fff;
  width: 1200px;
  margin: auto;
}

footer .footerNav .left{
  width: 330px

}
footer .footerNav .left .phone  {
  margin-bottom: 20px;
}
footer .footerNav .left .phone .num{
  font-size: 24px;
  font-weight: bold;
  line-height: 1.5;
}
footer .footerNav .left ul{
  display: flex;
}
footer .footerNav .left ul li{
  width: 100px;
  text-align: center;
  margin-right: 30px;
}
footer .footerNav .left ul li p{
  font-size: 12px;
  line-height: 20px;
}
  
footer .footerNav .left ul li img{
  display: block;
  width: 100px;
  margin: 0 auto;
}
  
footer .footerNav .right {
  flex:1;
  display: flex;
  justify-content: space-between;
}
footer .footerNav .right  li{

}


footer .copyright {
  text-align: center;
  height: 60px;
  line-height: 60px;
  letter-spacing: 0.5px;
  color: #ffffff;
  background-color: #333436;
  font-size: 12px;
}
