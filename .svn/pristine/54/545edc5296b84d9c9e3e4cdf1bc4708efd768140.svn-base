.news {
  position: relative;
  z-index: 1;
}
.news .inner {
  width: 1200px;
  margin: 0 auto;
}
.news .header {
  padding-top: 12px;
  font-size: 18px;
  color: #333;
}
.news .content {
  min-height: 700px;
}
.news .header .news_nav {
  height: 56px;
  border-bottom: 1px solid #F5A737;
}
.news .header .news_nav li {
  float: left;
  margin-right: 38px;
  cursor: pointer;
  font-weight: 600;
  line-height: 52px;
}
.news .header .news_nav li a {
  display: block;
  width: 100%;
  height: 100%;
}
.news .header .news_nav .active {
  color: #F5A737;
  border-bottom: 5px solid #F5A737;
}
.news .header .news_nav .active a {
  color: #F5A737;
}
.news .content .news_box {
  padding: 30px 0px;
  height: 216px;
  border-bottom: 1px solid #e0e0e0;
}
.news .content .news_box:last-child {
  border: none;
}
.news .content .news_box img {
  height: 156px;
  width: 280px;
  float: left;
  margin-right: 30px;
}
.news .content .news_box .mian_news {
  width: 890px;
}
.news .content .news_box .mian_news .title {
  color: #333;
  font-size: 16px;
  line-height: 42px;
  font-weight: 600;
}
.news .content .news_box .mian_news .detail {
  padding: 2px 0px;
  font-size: 12px;
  line-height: 24px;
  color: #666;
  height: 48px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*显示几行*/
  overflow: hidden;
}
.news .content .news_box .mian_news .more {
  line-height: 35px;
  font-size: 13px;
  color: #F5A737;
  cursor: pointer;
}
.news .loading {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 800px;
  background-color: #fff;
}