.xueyeguihua .banner img {
  display: block;
  width: 100%;
}
.xueyeguihua .inner {
  width: 1200px;
  margin: 0 auto;
}
.xueyeguihua .big_title {
  font-size: 32px;
  text-align: center;
  line-height: 140px;
  font-weight: bold;
}
.xueyeguihua .service_object {
  padding-bottom: 60px;
}
.xueyeguihua .service_object .inner {
  height: 304px;
  display: flex;
  align-items: center;
}
.xueyeguihua .service_object .inner p {
  padding-right: 100px;
  font-size: 22px;
  line-height: 40px;
}
.xueyeguihua .service_object .inner p span {
  display: inline-block;
  width: 11px;
  height: 11px;
  margin-right: 10px;
  background-color: #333;
}
.xueyeguihua .service_content {
  height: 714px;
  background: url(../imgs/xueyeguihua/bg_fuwuneirong.png) no-repeat center center;
}
.xueyeguihua .service_content .lis {
  padding-top: 40px;
  display: flex;
  flex-wrap: wrap;
  align-items: space-between;
  height: 456px;
}
.xueyeguihua .service_content .lis li.title_box {
  font-size: 18px;
  color: #fff;
}
.xueyeguihua .service_content .lis li.title_box p {
  background-color: #297EF4;
}
.xueyeguihua .service_content .lis li.title_box p:nth-child(3) {
  width: 766px;
  padding-left: 0;
  text-align: center;
}
.xueyeguihua .service_content .lis li {
  width: 100%;
  line-height: 88px;
  text-align: center;
  color: #333;
  font-size: 16px;
  display: flex;
  justify-content: space-between;
  width: 1200px;
  height: 88px;
}
.xueyeguihua .service_content .lis li:last-child {
  border: none;
}
.xueyeguihua .service_content .lis li p {
  background-color: #D4E8FB;
  border-radius: 5px;
}
.xueyeguihua .service_content .lis li p:nth-child(1) {
  width: 186px;
}
.xueyeguihua .service_content .lis li p:nth-child(2) {
  width: 240px;
}
.xueyeguihua .service_content .lis li p:nth-child(3) {
  width: 730px;
  padding-left: 36px;
  text-align: left;
}
.xueyeguihua .service_features {
  padding-bottom: 60px;
}
.xueyeguihua .service_features .lis {
  line-height: 1.5;
  display: flex;
  justify-content: space-between;
}
.xueyeguihua .service_features .lis li {
  width: 315px;
  text-align: center;
}
.xueyeguihua .service_features .lis li img {
  margin-bottom: 20px;
}
.xueyeguihua .service_features .lis li .title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
}
.xueyeguihua .service_features .lis li .detail {
  font-size: 16px;
  color: #666;
}