.banner {
	img {
		display: block;
		width: 100%;
	}
}
.inner {
	width: 1200px; 
	margin: 0 auto;
}
.part1 {

	ul {
		display: flex;
		flex-wrap: wrap;
		li {
			width: 25%;
			box-sizing: border-box;
			padding: 20px;
			.title {
			    font-size: 18px;
			    font-weight: 600;
			    color: #1A1A1A;
			    text-align: center;
			    margin-top: 10px;
			    line-height: 30px;
			}
			.detail {
				text-align: center;
				p {
					display: inline-block;
				    padding: 5px 15px;
				    background: #EEEEEE;
				    border-radius: 2px;
				    font-size: 15px;
				    color: #8A8A8A;
				    line-height: 16px;
				}
			}
			.detailBox {
				text-align: center;
				padding: 5px 0;
				font-size: 12px;
				line-height: 18px;
			}
		}
	}
}