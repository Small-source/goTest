<script>
    $(function () {
        var lunbo1Number=0;
        var lunbo2Number=0;
        $('.btn_left').click(function () {
            if(lunbo1Number==0){
                return
            }
            lunbo1Number--;
            Move1();
        })
        $('.btn_right').click(function () {
            if(lunbo1Number==(($('.lunbo li').length-4))){
                return
            }
            lunbo1Number++;
            Move1();
        })
        function Move1() {
            $(".lunbo").animate({marginLeft:-296*lunbo1Number+'px'})
        }



        $('.btn_left_md').click(function () {
            if(lunbo2Number==0){
                return
            }
            lunbo2Number--;
            Move2();
        })
        $('.btn_right_md').click(function () {
            if(lunbo2Number==(($('.lunbo2 li').length-1))){
                return
            }
            lunbo2Number++;
            Move2();
        })
        function Move2() {
            $('.lunbo2').css({marginLeft:-1200*lunbo2Number+'px'})
            // $(".lunbo2").animate({marginLeft:-1200*lunbo2Number+'px'})
        }
    })
</script>
<script>
    function change(el,index) {
        var tbodys = $('.tedianBox');
        var els = $(el).siblings();
        els.each(function(index, value,err) {
            value.className = '';
        })
        tbodys.each(function(index, value,err) {
            value.className = 'tedianBox';
        })
        tbodys[index].className = 'tedianBox active';
        el.className = 'active';
    }
    function changeXize(el,index) {
        var tbodys = $('.mainXize');
        var els = $(el).siblings();
        els.each(function(index, value,err) {
            value.className = '';
        })
        tbodys.each(function(index, value,err) {
            value.className = 'mainXize';
        })
        tbodys[index].className = 'mainXize active';
        el.className = 'actived';
    }
</script>
